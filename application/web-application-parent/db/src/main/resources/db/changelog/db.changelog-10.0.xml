<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.0.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet author="geekon" id="10.0-1">
        <renameColumn schemaName="public" tableName="bookings"
                        newColumnName="status" oldColumnName="confirmed"/>
    </changeSet>
    <changeSet author="geekon" id="10.0-2">
        <modifyDataType schemaName="public" tableName="bookings"
                        columnName="status" newDataType="VARCHAR(15)"/>
    </changeSet>
    <changeSet author="geekon" id="10.0-3">
        <addDefaultValue schemaName="public" tableName="bookings"
                        columnName="status" defaultValue="NOT_CONFIRMED"/>
    </changeSet>
</databaseChangeLog>