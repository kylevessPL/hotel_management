<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.0.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet author="geekon" id="1">
        <createTable tableName="additional_services">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="additional_services_pk"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="0" name="price" type="FLOAT4"/>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="2">
        <createTable tableName="amenities">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="amenities_pk"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="3">
        <createTable tableName="rooms">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="rooms_pk"/>
            </column>
            <column name="room_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="2" name="bed_amount" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="0" name="price" type="FLOAT4"/>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="4">
        <createTable tableName="special_offers">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="special_offers_pk"/>
            </column>
            <column defaultValueNumeric="0" name="discount" type="INTEGER"/>
            <column defaultValueNumeric="0" name="bookings_amount" type="INTEGER"/>
            <column name="description" type="VARCHAR(40)"/>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="5">
        <createTable tableName="bookings">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="bookings_pk"/>
            </column>
            <column name="book_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="person_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="room_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="offer_id" type="INTEGER"/>
            <column name="final_price" type="FLOAT4"/>
            <column name="payment_id" type="INTEGER"/>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="6">
        <createTable tableName="people">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="people_pk"/>
            </column>
            <column name="first_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="street_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="house_number" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="document_id" type="VARCHAR(9)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="7">
        <createTable tableName="payments">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="payments_pk"/>
            </column>
            <column name="payment_date" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="payment_form_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="8">
        <createTable tableName="bookings_services">
            <column name="booking_id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="bookings_services_pk"/>
            </column>
            <column name="service_id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="bookings_services_pk"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="9">
        <createTable tableName="payment_forms">
            <column autoIncrement="true" name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="payment_forms_pk"/>
            </column>
            <column name="name" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="10">
        <createTable tableName="room_amenities">
            <column name="room_id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="room_amenities_pk"/>
            </column>
            <column name="amenity_id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="room_amenities_pk"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="geekon" id="11">
        <createIndex indexName="additional_services_name_key" tableName="additional_services" unique="true">
            <column name="name"/>
        </createIndex>
    </changeSet>
    <changeSet author="geekon" id="12">
        <addForeignKeyConstraint baseColumnNames="service_id" baseTableName="bookings_services" constraintName="bookings_services_fk1" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="additional_services" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="13">
        <createIndex indexName="amenities_name_key" tableName="amenities" unique="true">
            <column name="name"/>
        </createIndex>
    </changeSet>
    <changeSet author="geekon" id="14">
        <addForeignKeyConstraint baseColumnNames="amenity_id" baseTableName="room_amenities" constraintName="room_amenities_fk1" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="amenities" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="15">
        <addForeignKeyConstraint baseColumnNames="room_id" baseTableName="bookings" constraintName="bookings_fk1" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="rooms" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="16">
        <addForeignKeyConstraint baseColumnNames="offer_id" baseTableName="bookings" constraintName="bookings_fk2" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="special_offers" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="17">
        <createIndex indexName="bookings_room_id_key" tableName="bookings" unique="true">
            <column name="room_id"/>
        </createIndex>
    </changeSet>
    <changeSet author="geekon" id="18">
        <addForeignKeyConstraint baseColumnNames="booking_id" baseTableName="bookings_services" constraintName="bookings_services_fk0" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="bookings" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="19">
        <createIndex indexName="people_document_id_key" tableName="people" unique="true">
            <column name="document_id"/>
        </createIndex>
    </changeSet>
    <changeSet author="geekon" id="20">
        <createIndex indexName="payment_forms_name_key" tableName="payment_forms" unique="true">
            <column name="name"/>
        </createIndex>
    </changeSet>
    <changeSet author="geekon" id="21">
        <addForeignKeyConstraint baseColumnNames="payment_form_id" baseTableName="payments" constraintName="payments_fk0" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="payment_forms" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="22">
        <addForeignKeyConstraint baseColumnNames="room_id" baseTableName="room_amenities" constraintName="room_amenities_fk0" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="rooms" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="23">
        <addForeignKeyConstraint baseColumnNames="person_id" baseTableName="bookings" constraintName="bookings_fk0" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="people" validate="true"/>
    </changeSet>
    <changeSet author="geekon" id="24">
        <addForeignKeyConstraint baseColumnNames="payment_id" baseTableName="bookings" constraintName="bookings_fk3" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="payments" validate="true"/>
    </changeSet>
</databaseChangeLog>
